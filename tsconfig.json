{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "CommonJS",
    "target": "es6",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@utils/*": ["./src/utils/*"],
      "@common/*": ["src/graphql/*"],
      "@dev/*": ["./dev/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules", "dev/**/*.ts", "**/*.test.ts"]
}
